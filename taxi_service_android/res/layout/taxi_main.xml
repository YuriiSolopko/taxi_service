<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="66dp" android:weightSum="1">
        <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="Enter name"
                android:id="@+id/name_label" android:gravity="center|right" android:textSize="18dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/driver_name"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="66dp"
                  android:weightSum="1">
        <TextView android:layout_width="130dp" android:layout_height="match_parent" android:text="Enter surname"
                  android:id="@+id/surname_label" android:gravity="center|right" android:textSize="18dp"/>
        <EditText android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/driver_surname"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="66dp"
                  android:weightSum="1">
        <TextView android:layout_width="130dp" android:layout_height="match_parent" android:text="Enter patronymic"
                  android:id="@+id/patronymic_label" android:gravity="center|right" android:textSize="18dp"/>
        <EditText android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/driver_patronymic"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="66dp"
                  android:weightSum="1">
        <TextView android:layout_width="130dp" android:layout_height="match_parent" android:text="Enter ID"
                  android:id="@+id/id_label" android:gravity="center|right" android:textSize="18dp"/>
        <EditText android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/driver_id"/>
    </LinearLayout>
    <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/submit_driver" android:layout_marginLeft="100dp" android:layout_marginTop="10dp"
            android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:textSize="20dp"/>
</LinearLayout>